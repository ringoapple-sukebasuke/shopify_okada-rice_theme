html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, section, summary, time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font: inherit;
  font-size: 100%;
  vertical-align: baseline;
  font-family: "Noto Sans JP", sans-serif;
}

body, h1, h2, h3, h4, h5, a, b, p, span, button, label {
  font-family: Noto Sans JP, sans-serif;
  font-size: 15px;
  line-height: 1.5;
  letter-spacing: 0.5px;
  color: rgb(62, 46, 25);
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}
a:hover {
  opacity: 0.8;
}

.header {
  padding: 10px 0;
  margin: 10px 0;
  text-align: center;
}
.header li {
  margin-right: 10px;
  display: inline;
}

.top_banner img {
  width: 100%;
  max-width: 1300px;
}

.site_title {
  font-size: 30px;
  margin: 5% 20% 5%;
}

.site_description {
  margin: 0 10%;
}

.top_product_area {
  flex-wrap: wrap;
  justify-content: space-between;
  display: flex;
  margin: 5%;
}
.top_product_area .top_content {
  width: 30%;
  margin-bottom: 30px;
}
.top_product_area .top_content a .product_title {
  font-size: 14px;
  color: grey;
}
.top_product_area .top_content a .product_price {
  font-size: 20px;
  color: grey;
}
.top_product_area .top_content a img {
  width: 100%;
}
