html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, section, summary, time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font: inherit;
  font-size: 100%;
  font-family: "Noto Sans JP", sans-serif;
  color: #EE8F4F;
}

body, h1, h2, h3, h4, h5, a, b, p, span, button, label {
  font-family: Noto Sans JP, sans-serif;
  font-size: 15px;
  line-height: 1.5;
  letter-spacing: 0.5px;
  color: rgb(62, 46, 25);
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}
a:hover {
  opacity: 0.8;
}

.header {
  padding: 20px 0;
  text-align: center;
  background-color: #F6D0B0;
}
.header li {
  margin-right: 10px;
  display: inline;
}
.header li a {
  color: #FFF;
}

.top_banner img {
  width: 100%;
  max-width: 1300px;
}

.site_title {
  font-size: 30px;
  margin: 5% 20% 5%;
}

.site_description {
  margin: 0 10%;
}

.top_product_area {
  flex-wrap: wrap;
  justify-content: space-between;
  display: flex;
  margin: 5%;
  background-color: #F8F4EF;
}
.top_product_area .top_content {
  width: 30%;
  margin-bottom: 30px;
}
.top_product_area .top_content a .product_title {
  font-size: 14px;
  color: grey;
}
.top_product_area .top_content a .product_price {
  font-size: 20px;
  color: grey;
}
.top_product_area .top_content a img {
  width: 100%;
}

.product_sections {
  max-width: 1080px;
  width: 100%;
  margin: 5% 10% 0;
  display: flex;
  background-color: #F8F4EF;
}
.product_sections .product_left_section {
  width: 50%;
}
.product_sections .product_left_section img {
  width: 100%;
}
.product_sections .product_left_section .product_description {
  margin-top: 30px;
}
.product_sections .product_right_section {
  width: 50%;
  margin: 0 5%;
}
.product_sections .product_right_section .product_title {
  font-size: 1.5em;
  margin-bottom: 30px;
}
.product_sections .product_right_section form .product_price {
  font-size: 1.3em;
  margin: 10px 0;
}
.product_sections .product_right_section form label {
  font-size: 1.3em;
  margin: 10px 0;
}
.product_sections .product_right_section form input {
  display: block;
  margin: 5px 0;
}
.product_sections .product_right_section form .send_form {
  margin-top: 40px;
  display: block;
  position: relative;
  width: 240px;
  height: 60px;
  border-radius: 5%;
  background: rgb(153, 191, 187);
  background: radial-gradient(rgba(93, 108, 107, 0.3) 0%, rgba(95, 162, 158, 0) 90%);
  box-shadow: 0 0 24px rgb(116, 132, 145);
  transition: all 0.7s ease;
}
.product_sections .product_right_section form .send_form:hover {
  box-shadow: 0 0 24px rgba(116, 132, 145, 0);
}
.product_sections .product_right_section form .send_form:hover .button_box {
  letter-spacing: 8px;
  color: rgb(255, 255, 255);
}
.product_sections .product_right_section form .send_form .button_wrapper {
  width: 100%;
  height: 100%;
}
.product_sections .product_right_section form .send_form .button__box {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  z-index: 1;
  top: 3%;
  left: 0.8%;
  width: 98.4%;
  height: 94%;
}

.cart_container {
  margin: 0 5%;
}
.cart_container h1 {
  font-size: 2.5em;
  text-align: center;
}
.cart_container form .cart_item_list .flex_wrap {
  justify-content: space-between;
  display: flex;
  background-color: #F8F4EF;
  width: 100%;
}
.cart_container form .cart_item_list .flex_wrap .img_wrap {
  width: 50%;
}
.cart_container form .cart_item_list .flex_wrap .info_wrap {
  display: flex;
  align-items: center;
  width: 50%;
}
.cart_container form .cart_item_list .flex_wrap .info_wrap .cart_item_price {
  font-size: 2em;
}
.cart_container form .cart_item_list .flex_wrap .info_wrap .cart_item_remove {
  background-color: white;
}
.cart_container form .cart_item_list .flex_wrap .info_wrap .cart_item_remove a {
  font-size: 20px;
  width: 150px;
  height: 45px;
  background-color: white;
  display: block;
}
